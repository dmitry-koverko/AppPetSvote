<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layers_1"
    android:clickable="true"
    android:focusable="true">
    <com.google.android.material.appbar.AppBarLayout

        android:background="@android:color/transparent"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            auto:expandedTitleMarginEnd="48dp"
            auto:expandedTitleMarginStart="48dp"
            auto:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="visible">

                <com.petsvote.ui.textview.SimpleSFTextView
                    android:id="@+id/rating_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/rating"
                    android:textColor="@color/text_color"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <com.petsvote.ui.maintabs.BesieTabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    app:btl_count_tabs="3"
                    app:btl_type="0" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        auto:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/list_rating"
                app:layout_constraintTop_toBottomOf="@id/linearHeader">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/filterContainer"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/top_linear">

                    <com.petsvote.ui.textview.SimpleSFTextView
                        android:id="@+id/filter_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/default_filter_text"
                        android:textColor="@color/text_color"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/image_filter"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.petsvote.ui.BesieLayout
                        android:id="@+id/image_filter"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginRight="16dp"
                        app:bl_ripple="true"
                        app:bl_ripple_color="@color/ripple_primary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="23dp"
                            android:src="@drawable/ic_filter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </com.petsvote.ui.BesieLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            app:layout_constraintTop_toBottomOf="@id/filter"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_rating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                tools:itemCount="8"
                tools:listitem="@layout/item_rating" />


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/bottom_view_bg"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_find"
            android:layout_gravity="center"
            android:id="@+id/list_pets_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>


        <FrameLayout
            android:visibility="gone"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/scrollToTop"
            android:layout_width="60dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/ic_icon_scroll_to_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

