<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.petsvote.ui.RoundedImage
        android:id="@+id/image"
        android:src="@drawable/cat_example"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/mask"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/linear_mask_default"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="112dp"/>

    <ImageView
        android:id="@+id/corona"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toTopOf="@id/name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="11dp"
        android:src="@drawable/ic_corona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.petsvote.ui.textview.SimpleSFTextView
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/card_text_color"
        android:text="Tiger"
        android:textSize="15sp"
        android:id="@+id/name"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.petsvote.ui.textview.SimpleSFTextView
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/card_text_color"
        android:text="Minsk, Belarus"
        android:textSize="15sp"
        android:id="@+id/location"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>