<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.PetInfoFragment">

    <androidx.core.widget.NestedScrollView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.petsvote.ui.parallax.HorizontalParallaxView
                android:id="@+id/parallax"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="550dp"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    app:layout_constraintRight_toLeftOf="@id/petShare"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginRight="8dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <com.petsvote.ui.textview.SimpleSFTextView
                        android:id="@+id/pet_name"
                        tools:text="Ешка, 7 мес."
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:textSize="34sp"
                        android:textColor="@color/active_text_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.petsvote.ui.textview.SimpleSFTextView
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:id="@+id/pet_locate"
                            tools:text="Манчикин, Минск, Беларусь"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="2dp"
                            android:textSize="20sp"
                            android:textColor="@color/sub_active_text_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.petsvote.ui.BesieLayout
                    android:layout_marginRight="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:bl_background="@android:color/transparent"
                    app:bl_ripple="true"
                    app:bl_ripple_color="@color/ripple_primary"
                    android:id="@+id/petShare"
                    android:layout_width="36dp"
                    android:layout_height="36dp">
                    <ImageView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_icon_share"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </com.petsvote.ui.BesieLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:text="@string/popularity"
                android:textSize="15sp"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.petsvote.ui.textview.SimpleSFTextView
                    android:id="@+id/rating_balls"
                    android:textSize="34sp"
                    android:text="0"
                    android:textColor="@color/ui_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.petsvote.ui.textview.SimpleSFTextView
                    android:layout_marginLeft="8dp"
                    android:textSize="17sp"
                    android:text="@string/balls"
                    android:textColor="@color/ui_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.petsvote.ui.BesieLayout
                    android:id="@+id/instagram_container"
                    tools:visibility="visible"
                    android:visibility="invisible"
                    android:layout_gravity="right|bottom"
                    app:bl_background="@android:color/transparent"
                    app:bl_ripple="true"
                    app:bl_ripple_color="@color/ripple_primary"
                    android:layout_width="36dp"
                    android:layout_height="36dp">

                    <ImageView
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/ic_instagram_pet"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                </com.petsvote.ui.BesieLayout>

                </FrameLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:id="@+id/city"
                tools:text="Минск"
                android:textSize="15sp"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:id="@+id/city_rating"
                android:text="0 место"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:textColor="@color/active_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:id="@+id/country"
                tools:text="Беларусь"
                android:textSize="15sp"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:id="@+id/country_rating"
                android:text="0 место"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:textColor="@color/active_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:text="@string/world"
                android:textSize="15sp"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:id="@+id/global_rating"
                android:text="0 место"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:textColor="@color/active_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="28dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp">


                <com.petsvote.ui.BesieImage
                    android:src="@drawable/ic_user_avatar"
                    android:scaleType="centerCrop"
                    android:id="@+id/user_image"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>

                <com.petsvote.ui.textview.SimpleSFTextView
                    app:layout_constraintVertical_chainStyle="packed"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toTopOf="@id/owner_name"
                    android:id="@+id/owner"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/user_image"
                    android:text="@string/owner"
                    android:textSize="15sp"
                    android:textColor="@color/sub_active_text_color"
                    android:layout_marginLeft="14dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.petsvote.ui.textview.SimpleSFTextView
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintTop_toBottomOf="@id/owner"
                    android:id="@+id/owner_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/user_image"
                    tools:text="Александрина Константиновc..."
                    android:textSize="20sp"
                    android:textColor="@color/active_text_color"
                    android:layout_marginLeft="14dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.petsvote.ui.BesieLayout
                android:visibility="gone"
                tools:visibility="visible"
                app:bl_background="@color/ui_primary"
                app:bl_ripple="true"
                app:bl_ripple_color="@color/ripple_primary"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <com.petsvote.ui.textview.SimpleSFTextView
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Поделиться"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_icon_share"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </com.petsvote.ui.BesieLayout>

            <View
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:layout_marginTop="24dp"
                android:text="@string/pet_id"
                android:textSize="17sp"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:weightSum="2"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="36dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.petsvote.ui.textview.SimpleSFTextView
                    android:id="@+id/pet_id"
                    tools:text="-"
                    android:textSize="20sp"
                    android:textColor="@color/active_text_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.petsvote.ui.textview.SFTextView
                    android:id="@+id/copy"
                    android:gravity="right"
                    android:text="@string/copy"
                    android:textSize="20sp"
                    android:textColor="@color/sub_active_text_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/top_gradient"
        android:id="@+id/tob_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <com.petsvote.ui.BesieLayout
            android:id="@+id/close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:bl_background="@android:color/transparent"
            app:bl_ripple="true"
            app:bl_ripple_color="@color/ripple_primary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </com.petsvote.ui.BesieLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>