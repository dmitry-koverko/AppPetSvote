<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layers_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.petsvote.ui.maintabs.HeaderTabsLayout
        android:id="@+id/headerTabs"
        app:tabRippleColor="@android:color/transparent"
        app:tabPaddingEnd="-1dp"
        app:tabPaddingStart="-1dp"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <com.google.android.material.tabs.TabLayout
        app:tabPaddingStart="-1dp"
        app:tabMode="scrollable"
        app:layout_constraintTop_toBottomOf="@id/headerTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout="@layout/item_tab_1"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.tabs.TabItem
            android:layout="@layout/item_tab"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            />

        <com.google.android.material.tabs.TabItem
            android:layout="@layout/item_tab_2"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>