<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layers_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.petsvote.ui.BesieLayout
                android:id="@+id/close"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                app:bl_background="@android:color/transparent"
                app:bl_ripple="true"
                app:bl_ripple_color="@color/ripple_primary"
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:padding="8dp"
                    android:src="@drawable/ic_close"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>

            </com.petsvote.ui.BesieLayout>

            <com.petsvote.ui.BesieLayout
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                app:bl_background="@android:color/transparent"
                app:bl_ripple="true"
                app:bl_ripple_color="@color/ripple_primary"
                android:layout_width="48dp"
                android:layout_height="48dp">

                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_more"
                    android:layout_width="36dp"
                    android:layout_height="36dp"/>

            </com.petsvote.ui.BesieLayout>


        </FrameLayout>

        <com.petsvote.ui.textview.SimpleSFTextView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/active_text_color"
            android:textSize="34sp"
            android:text="@string/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.petsvote.ui.textview.SimpleSFTextView
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/active_text_color"
            android:textSize="20sp"
            android:text="@string/profile_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/sub_active_text_color"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:text="@string/profile_sub_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.petsvote.ui.textview.SemiboldText
            android:textColor="@color/sub_active_text_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:text="@string/profile_photo_desc"
            android:textSize="15sp"
            android:visibility="visible" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cropImage"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_width="96dp"
            android:layout_height="96dp">

            <com.petsvote.ui.BesieLayout
                app:bl_background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/bl_avatar"
                android:layout_width="96dp"
                android:layout_height="96dp">

                <com.petsvote.ui.BesieImage
                    app:bi_background_color="@color/avarar_bg"
                    app:bi_ripple_color="@color/ripple_gray"
                    android:id="@+id/avatar"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="96dp"
                    android:layout_height="96dp"/>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/icon_photo"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_add_photo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </com.petsvote.ui.BesieLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.petsvote.ui.textview.SemiboldText
                android:textColor="@color/sub_active_text_color"
                android:layout_marginLeft="16dp"
                android:text="@string/necessarily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputEditText
                style="@style/UserFieldInput"
                android:hint="@string/name"
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.petsvote.ui.textview.SemiboldText
                android:layout_marginTop="4dp"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginLeft="16dp"
                android:text="@string/unnecessarily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lastname"
                android:hint="@string/family"
                style="@style/UserFieldInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/select_country"
            android:background="@drawable/item_list_state"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.petsvote.ui.textview.SimpleSFTextView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:id="@+id/country_title"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginLeft="16dp"
                android:text="@string/necessarily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:layout_marginTop="2dp"
                android:id="@+id/country"
                app:layout_constraintTop_toBottomOf="@id/country_title"
                android:text="@string/country"
                android:textSize="20sp"
                android:textColor="@color/active_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_expand_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/country"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background = "@color/divider"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/select_city"
            android:background="@drawable/item_list_state"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.petsvote.ui.textview.SimpleSFTextView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:id="@+id/city_title"
                android:textColor="@color/sub_active_text_color"
                android:layout_marginLeft="16dp"
                android:text="@string/necessarily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.petsvote.ui.textview.SimpleSFTextView
                android:layout_marginTop="2dp"
                android:id="@+id/city"
                app:layout_constraintTop_toBottomOf="@id/city_title"
                android:text="@string/city"
                android:textSize="20sp"
                android:textColor="@color/active_text_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/rightCity"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_expand_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/city"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background = "@color/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.petsvote.ui.textview.SemiboldText
            android:textColor="@color/sub_active_text_color"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/profile_data_crypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.petsvote.ui.BesieLayout
            app:bl_background="@color/disable_btn"
            app:bl_ripple_color="@color/ui_gray"
            app:bl_ripple="true"
            android:id="@+id/save"
            android:clickable="false"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.petsvote.ui.textview.SimpleSFTextView
                android:id="@+id/saveText"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/done"
                android:textColor="@color/besie_tab_text_unselected_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.petsvote.ui.BesieLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>
