<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/bg_layers_4"
            app:cardCornerRadius="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.petsvote.ui.BesieLayout
                    android:layout_marginLeft="6dp"
                    app:bl_ripple="true"
                    app:bl_ripple_color="@color/ripple_primary"
                    android:layout_width="48dp"
                    android:layout_height="48dp">

                    <ImageView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/close"
                        android:src="@drawable/ic_close"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                </com.petsvote.ui.BesieLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profileContainer"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/item_list_state"
                    android:paddingLeft="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.petsvote.ui.BesieImage
                            android:id="@+id/user_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_user_avatar" />

                        <com.petsvote.ui.textview.SimpleSFTextView
                            android:id="@+id/owner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginBottom="2dp"
                            android:text="@string/owner"
                            android:textColor="@color/sub_active_text_color"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@id/owner_name"
                            app:layout_constraintLeft_toRightOf="@id/user_image"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed" />

                        <ImageView
                            android:id="@+id/imgStatus"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/ic_status"
                            app:layout_constraintBottom_toTopOf="@id/owner_name"
                            app:layout_constraintLeft_toRightOf="@id/owner" />

                        <com.petsvote.ui.textview.SimpleSFTextView
                            android:id="@+id/owner_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            tools:text="Александрина Константиновcdsdasdasdas"
                            android:textColor="@color/active_text_color"
                            android:textSize="17sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@id/user_image"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/owner"
                            app:layout_constraintVertical_chainStyle="packed" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <View
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.petsvote.ui.textview.SimpleSFTextView
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/active_text_color"
                        android:textSize="17sp"
                        android:text="@string/getrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNotify"
                        android:checked="true"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.petsvote.ui.textview.SemiboldText
                    android:textColor="@color/sub_active_text_color"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:text="@string/get_rate_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="13dp"
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ratingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/item_list_state">

                    <com.petsvote.ui.textview.SimpleSFTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:text="@string/rate_app"
                        android:textColor="@color/active_text_color"
                        android:textSize="17sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/supportContainer"
                    android:background="@drawable/item_list_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.petsvote.ui.textview.SimpleSFTextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/active_text_color"
                        android:textSize="17sp"
                        android:text="@string/write_to_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/shareContainer"
                    android:background="@drawable/item_list_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.petsvote.ui.textview.SimpleSFTextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/active_text_color"
                        android:textSize="17sp"
                        android:text="@string/invite_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/item_list_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.petsvote.ui.textview.SimpleSFTextView
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/active_text_color"
                        android:textSize="17sp"
                        android:text="@string/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:background="@color/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="27dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_margin="12dp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/facebook"
                        android:id="@+id/instagram"
                        android:src="@drawable/instagram"
                        android:layout_width="38dp"
                        android:layout_height="38dp"/>

                    <ImageView
                        android:layout_margin="12dp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toRightOf="@id/instagram"
                        app:layout_constraintRight_toLeftOf="@id/twitter"
                        android:id="@+id/facebook"
                        android:src="@drawable/facebook"
                        android:layout_width="38dp"
                        android:layout_height="38dp"/>

                    <ImageView

                        android:layout_margin="12dp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toRightOf="@id/facebook"
                        app:layout_constraintRight_toLeftOf="@id/viber"
                        android:id="@+id/twitter"
                        android:src="@drawable/twitter"
                        android:layout_width="38dp"
                        android:layout_height="38dp"/>

                    <ImageView
                        android:layout_margin="12dp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintRight_toLeftOf="@id/telegram"
                        app:layout_constraintLeft_toRightOf="@id/twitter"
                        android:id="@+id/viber"
                        android:src="@drawable/viber"
                        android:layout_width="38dp"
                        android:layout_height="38dp"/>

                    <ImageView
                        android:layout_margin="12dp"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toRightOf="@id/viber"
                        app:layout_constraintRight_toRightOf="parent"
                        android:id="@+id/telegram"
                        android:src="@drawable/telegram"
                        android:layout_width="38dp"
                        android:layout_height="38dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <com.petsvote.ui.textview.SimpleSFTextView
                    android:layout_marginTop="28dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/sub_text_color"
                    android:text="@string/version_app_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>