<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/bg_layers_1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/topImage"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_empty_vote"
        android:layout_marginTop="116dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="196dp"
        android:layout_height="166dp"/>

    <com.petsvote.ui.textview.SimpleSFTextView
        android:id="@+id/title"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/topImage"
        android:gravity="center"
        android:text="@string/empty_list_vote"
        android:textColor="@color/active_text_color"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.petsvote.ui.textview.DefaultText
        android:id="@+id/subText"
        android:textColor="@color/sub_active_text_color"
        android:gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:text="@string/sub_title_empty_vote"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.petsvote.ui.BesieLayout
        app:layout_constraintTop_toBottomOf="@id/subText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/share"
        app:bl_ripple="true"
        app:bl_background="@color/refresh_background_color"
        app:bl_ripple_color="@color/ripple_primary"
        android:layout_width="36dp"
        android:layout_height="36dp">

        <ImageView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_icon_refresh"
            android:layout_width="22dp"
            android:layout_height="18dp"/>

    </com.petsvote.ui.BesieLayout>


    <com.petsvote.ui.BesieLayout
        android:id="@+id/share"
        app:bl_background="@color/primary_button_color"
        app:bl_ripple_color="@color/primary_button_ripple"
        app:bl_ripple="true"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="56dp">


        <com.petsvote.ui.textview.SimpleSFTextView
            android:textSize="20sp"
            android:textColor="@color/text_color_btn_primary"
            android:gravity="center"
            android:text="@string/share_friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.petsvote.ui.BesieLayout>

</androidx.constraintlayout.widget.ConstraintLayout>