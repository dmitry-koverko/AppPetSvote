<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="100">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toTopOf="@id/description"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" />
        <Constraint
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:alpha="1"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" />
        <Constraint
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />
        <Constraint
            android:id="@+id/simpleSFTextView"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/rndView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" />
        <Constraint
            android:id="@+id/maskBottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:visibility="visible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toStartOf="@+id/simpleSFTextView"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="8dp"
            motion:layout_constraintStart_toEndOf="@+id/simpleSFTextView"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="8dp"
            motion:layout_constraintBottom_toTopOf="@+id/simpleSFTextView"
            android:layout_marginBottom="16dp" />
        <Constraint
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            motion:layout_constraintBottom_toTopOf="@id/description"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="0dp" />
        <Constraint
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp"
            android:alpha="0"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" />
        <Constraint
            android:id="@+id/mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            motion:layout_constraintBottom_toTopOf="@+id/simpleSFTextView"
            android:layout_marginBottom="16dp" />
        <Constraint
            android:id="@+id/simpleSFTextView"
            android:scaleX="1"
            android:scaleY="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/rndView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" />
        <Constraint
            android:id="@+id/maskBottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:visibility="visible"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>