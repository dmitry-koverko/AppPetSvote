<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircularProgress" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/progress_bar</item>
    </style>

    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SignInWithGoogle" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="bv_background_color">@color/bg_sign_in_with_google</item>
        <item name="bv_ripple_color">@color/ripple_primary</item>
    </style>

    <style name="SignButtonText" parent="Theme.AppCompat.DayNight">
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/sign_in_with_google</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_sign_in_with_google</item>
    </style>

    <style name="RegisterAppName" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="RegisterDescriptionAppName" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_description</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="LegalButton" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="bv_background_color">@color/bg_legal_button</item>
        <item name="bv_ripple_color">@color/ripple_primary</item>
    </style>

    <style name="TextLegalButton" parent="Theme.AppCompat.DayNight">
        <item name="android:text">@string/legal_button_text</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="bv_background_color">@color/bg_legal_button</item>
        <item name="bv_ripple_color">@color/ripple_primary</item>
    </style>

    <style name="Widget.Theme.AppPetSvote.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <style name="VoteTextCardTitle" parent="Widget.AppCompat.TextView">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="VoteTextCardDesc" parent="Widget.AppCompat.TextView">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>