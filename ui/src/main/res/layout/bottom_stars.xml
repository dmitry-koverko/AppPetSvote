<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <com.petsvote.ui.BesieLayout
        android:id="@+id/star1"
        android:layout_width="29dp"
        android:layout_height="28dp"
        app:bl_background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/star2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/starUnActiveOne"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_icon_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starActiveOne"
            android:layout_width="27dp"
            android:layout_height="26dp"
            android:alpha="0"
            android:src="@drawable/ic_icon_star_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.petsvote.ui.BesieLayout>

    <com.petsvote.ui.BesieLayout
        android:id="@+id/star2"
        android:layout_width="35dp"
        android:layout_height="33dp"
        app:bl_background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/star1"
        app:layout_constraintRight_toLeftOf="@id/star3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/starUnActiveTwo"
            android:layout_width="33dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_icon_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_two"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starActiveTwo"
            android:layout_width="33dp"
            android:layout_height="31dp"
            android:alpha="0"
            android:src="@drawable/ic_icon_star_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.petsvote.ui.BesieLayout>

    <com.petsvote.ui.BesieLayout
        app:bl_background="@android:color/transparent"
        android:id="@+id/star3"
        android:layout_width="41dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/star2"
        app:layout_constraintRight_toLeftOf="@id/star4"
        app:layout_constraintTop_toTopOf="parent"
        app:type_star="MIDDLE">

        <ImageView
            android:id="@+id/starUnActiveThree"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_icon_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_three"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starActiveThree"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:alpha="0"
            android:src="@drawable/ic_icon_star_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.petsvote.ui.BesieLayout>

    <com.petsvote.ui.BesieLayout
        app:bl_background="@android:color/transparent"
        android:id="@+id/star4"
        android:layout_width="45dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/star3"
        app:layout_constraintRight_toLeftOf="@id/star5"
        app:layout_constraintTop_toTopOf="parent"
        app:type_star="MAX">

        <ImageView
            android:id="@+id/starUnActiveFour"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_icon_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_four"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starActiveFour"
            android:layout_width="45dp"
            android:layout_height="42dp"
            android:alpha="0"
            android:src="@drawable/ic_icon_star_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.petsvote.ui.BesieLayout>

    <com.petsvote.ui.BesieLayout
        app:bl_background="@android:color/transparent"
        android:id="@+id/star5"
        android:layout_width="53dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@id/star4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:type_star="MAX2">

        <ImageView
            android:id="@+id/starUnActiveFive"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_icon_star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_five"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/starActiveFive"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:alpha="0"
            android:src="@drawable/ic_icon_star_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </com.petsvote.ui.BesieLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewVote1"
            android:layout_weight="1.08"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/viewVote2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/viewVote3"
            android:layout_weight="0.96"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/viewVote4"
            android:layout_weight="0.96"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/viewVote5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>