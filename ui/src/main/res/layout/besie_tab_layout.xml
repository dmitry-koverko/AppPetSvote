<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.petsvote.ui.BesieLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:bl_background="@color/besie_tabs_bg"
        android:layout_width="0dp"
        android:layout_height="40dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.petsvote.ui.BesieLayout
                android:id="@+id/tab_indicator"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:visibility="visible"
                app:bl_background="@color/besie_tab_bg"
                app:layout_constraintWidth_percent="0.33"
                tools:visibility="gone" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:visibility="visible"
                android:weightSum="3"
                android:id="@+id/llp_tabs"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.petsvote.ui.textview.SFTextView
                    android:layout_weight="1"
                    android:id="@+id/text_city"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textColor="@color/besie_tab_text_selected_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.petsvote.ui.textview.SFTextView
                    android:id="@+id/text_country"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/country"
                    android:textColor="@color/besie_tab_text_unselected_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.petsvote.ui.textview.SFTextView
                    android:id="@+id/text_world"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/world"
                    android:textColor="@color/besie_tab_text_unselected_color"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.petsvote.ui.BesieLayout>


</androidx.constraintlayout.widget.ConstraintLayout>